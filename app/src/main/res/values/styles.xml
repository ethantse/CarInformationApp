<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:divider">@drawable/ic_list_divider</item>
        <item name="android:dividerHeight">@dimen/division_line</item>
        <item name="android:listDivider">@drawable/ic_list_divider</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="styleLoadingLayout">@style/LoadingLayoutStyle</item>
    </style>

    <style name="LoadingLayoutStyle" parent="LoadingLayout.Style">
        <item name="llEmptyImage">@drawable/ic_empty</item>
        <item name="llErrorImage">@drawable/ic_error</item>
        <item name="llLoadingResId">@layout/common_loading</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase" />


    <!-- Customize your theme here. -->

    <style name="AppTheme.TranslucentStatus" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.Toolbar.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


    <style name="AppTheme.Division">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/division_line</item>
        <item name="android:dividerHeight">@dimen/division_line</item>
        <item name="android:divider">@color/colorDivision</item>
        <item name="android:background">@color/colorDivision</item>
    </style>

    <style name="AppTheme.Division.Middle">
        <item name="android:layout_marginLeft">@dimen/dimenPaddingCommon</item>
        <!--<item name="android:layout_marginStart">@dimen/dimenPaddingCommon</item>-->
    </style>


    <style name="AppTheme.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textsize_content</item>
        <item name="android:textColor">@color/colorTextContent</item>
    </style>

    <style name="AppTheme.Label.Layout">
        <item name="android:paddingTop">@dimen/dimenPaddingVertical</item>
        <item name="android:paddingBottom">@dimen/dimenPaddingVertical</item>
        <item name="android:paddingLeft">@dimen/dimenPaddingHorizontal</item>
        <item name="android:paddingRight">@dimen/dimenPaddingHorizontal</item>
    </style>

    <style name="AppTheme.Label.Title">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">@dimen/textsize_title</item>
    </style>

    <style name="AppTheme.Label.Title.Large">
        <item name="android:textSize">@dimen/textsize_titlelarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Label.Title.Small">
        <item name="android:textSize">@dimen/textsize_titlesmall</item>
    </style>

    <style name="AppTheme.Label.Small">
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="AppTheme.Label.Description">
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/textsize_content</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="AppTheme.Label.Assistant">
        <item name="android:textColor">@color/colorTextAssistant</item>
        <item name="android:textSize">@dimen/textsize_content</item>
    </style>

    <style name="AppTheme.ArrowRight">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">end|right|center_vertical</item>
        <item name="android:background">@drawable/ic_chevron_right</item>
    </style>

    <style name="AppTheme.ArrowRight.Gray">
        <item name="android:background">@drawable/ic_chevron_right_gray</item>
    </style>

    <style name="AppTheme.CommonBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.CommonBar.Panel">
        <!--<item name="android:paddingTop">@dimen/division_line</item>-->
        <!--<item name="android:paddingBottom">@dimen/division_line</item>-->
        <item name="android:layout_marginTop">@dimen/dimenPaddingCommon</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bc_background_panel</item>
    </style>

    <style name="AppTheme.CommonBar.PanelLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/dimenPaddingCommon</item>
        <item name="android:background">@color/colorBackgroundDark</item>
    </style>

    <style name="AppTheme.CommonBar.Bar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">@dimen/dimenPaddingCommon</item>
        <item name="android:paddingRight">@dimen/dimenPaddingCommon</item>
        <!--<item name="android:paddingTop">@dimen/dimenPaddingDiminutive</item>-->
        <!--<item name="android:paddingBottom">@dimen/dimenPaddingDiminutive</item>-->

        <item name="android:background">?android:attr/selectableItemBackground</item>
        <!--<item name="android:background">@drawable/af_selector_background_white</item>-->
    </style>

    <style name="AppTheme.CommonBar.Bar.Header">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/dimenPaddingCommon</item>
        <item name="android:paddingRight">@dimen/dimenPaddingCommon</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.CommonBar.Bar.Alone">
        <item name="android:layout_marginTop">@dimen/dimenPaddingCommon</item>
        <item name="android:background">@drawable/bc_background_panel</item>
    </style>

    <style name="AppTheme.CommonBar.Content" parent="AppTheme.Label">
        <item name="android:singleLine">false</item>
        <!--<item name="android:layout_margin">@dimen/dimenPaddingDiminutive</item>-->
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:paddingTop">2dp</item>-->
        <!--<item name="android:paddingBottom">2dp</item>-->
        <!--<item name="android:paddingLeft">@dimen/dimenPaddingDiminutive</item>-->
        <!--<item name="android:paddingRight">@dimen/dimenPaddingCommon</item>-->
        <item name="android:paddingTop">@dimen/dimenPaddingCommon</item>
        <item name="android:paddingBottom">@dimen/dimenPaddingCommon</item>
        <item name="android:paddingLeft">@dimen/dimenPaddingDiminutive</item>
        <item name="android:paddingRight">@dimen/dimenPaddingDiminutive</item>
        <item name="android:drawablePadding">@dimen/dimenPaddingCommon</item>
    </style>

    <style name="AppTheme.CommonBar.Content.Value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.CommonBar.Value" parent="AppTheme.Label.Description">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextAssistant</item>
        <item name="android:gravity">right|end</item>
        <item name="android:paddingTop">@dimen/dimenPaddingCommon</item>
        <item name="android:paddingBottom">@dimen/dimenPaddingCommon</item>
        <item name="android:paddingLeft">@dimen/dimenPaddingHorizontal</item>
        <item name="android:paddingRight">@dimen/dimenPaddingDiminutive</item>
        <item name="android:drawablePadding">@dimen/dimenPaddingCommon</item>
        <!--<item name="android:layout_marginEnd">@dimen/dimenPaddingDiminutive</item>-->
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="BaseAppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:listDivider">@color/list_divider_light</item>
        <item name="widgetBackground">@color/widget_background_light</item>
        <item name="widgetBackgroundDark">@color/widget_background_checked_light</item>
        <item name="widgetBackgroundTitle">@android:color/white</item>
        <item name="referenceText">@color/reference_text_light</item>
        <item name="referenceBackground">@drawable/reference_background_light</item>
        <item name="app_logo">@drawable/logo_dark</item>
        <item name="darkTheme">false</item>
    </style>

    <style name="AppThemeLight" parent="BaseAppThemeLight" />

    <!-- App Theme Dark -->

    <style name="BaseAppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:listDivider">@color/list_divider_dark</item>
        <item name="widgetBackground">@color/widget_background_dark</item>
        <item name="widgetBackgroundDark">@color/widget_background_checked_dark</item>
        <item name="widgetBackgroundTitle">@color/color_primary</item>
        <item name="referenceText">@color/reference_text_dark</item>
        <item name="referenceBackground">@drawable/reference_background_dark</item>
        <item name="app_logo">@drawable/logo_light</item>
        <item name="darkTheme">true</item>
    </style>

    <style name="AppThemeDark" parent="BaseAppThemeDark" />

    <!-- App Theme Launch -->

    <style name="AppThemeLaunch" parent="BaseAppThemeLight">
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <!-- App Dialog Light -->

    <style name="BaseAppDialogLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:listDivider">@color/list_divider_light</item>
        <item name="widgetBackground">@color/widget_background_light</item>
        <item name="widgetBackgroundDark">@color/widget_background_checked_light</item>
        <item name="widgetBackgroundTitle">@android:color/white</item>
    </style>

    <style name="AppDialogLight" parent="BaseAppDialogLight" />

    <style name="AppDialogLight.Progress">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppDialogLight.Alert">
        <item name="windowMinWidthMajor">@fraction/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@fraction/dialog_min_width_minor</item>
    </style>

    <style name="AppDialogLight.TopicReply">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppAnimation.BottomSheet</item>
    </style>

    <!-- App Dialog Dark -->

    <style name="BaseAppDialogDark" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:listDivider">@color/list_divider_dark</item>
        <item name="widgetBackground">@color/widget_background_dark</item>
        <item name="widgetBackgroundDark">@color/widget_background_checked_dark</item>
        <item name="widgetBackgroundTitle">@color/color_primary</item>
    </style>

    <style name="AppDialogDark" parent="BaseAppDialogDark" />

    <style name="AppDialogDark.Progress">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppDialogDark.Alert">
        <item name="windowMinWidthMajor">@fraction/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@fraction/dialog_min_width_minor</item>
    </style>

    <style name="AppDialogDark.TopicReply">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppAnimation.BottomSheet</item>
    </style>

    <!-- App Widget -->

    <style name="AppWidget" parent="Theme.AppCompat.Light" />

    <!-- Deep Line -->

    <style name="AppWidget.DeepLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/deep_line_width</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppWidget.DeepLine.Vertical">
        <item name="android:layout_width">@dimen/deep_line_width</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Gap -->

    <style name="AppWidget.Gap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/gap_size</item>
    </style>

    <style name="AppWidget.ShadowGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shadow_gap_elevation</item>
        <item name="android:layout_marginBottom">@dimen/shadow_gap_margin_fill</item>
        <item name="android:background">@drawable/gap_shadow</item>
    </style>

    <style name="AppWidget.ShadowGap.Opposite">
        <item name="android:layout_marginTop">@dimen/shadow_gap_margin_fill</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/gap_shadow_opposite</item>
    </style>

    <!-- Badge Dot -->

    <style name="AppWidget.BadgeDot">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/badge_dot</item>
    </style>

    <!-- App Animation -->

    <style name="AppAnimation" parent="android:Animation" />

    <style name="AppAnimation.BottomSheet">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_out</item>
    </style>
</resources>
